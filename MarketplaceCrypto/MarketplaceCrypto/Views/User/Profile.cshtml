@model Shared.DTO.GetUserDTO

<head>
    @{
        Layout = "_Layout";
    }
</head>

<title>User Profile</title>
<h4>Account Details:</h4>
<img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/Windows_10_Default_Profile_Picture.svg" class="rounded-circle shadow-4"
     style="width: 150px;" alt="Avatar" />

<style>
    .profile-container {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        padding-top: 10px;
        width: 320px;
        text-align: left;
    }

        .profile-container p {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .profile-container button {
            background-color: #007bff;
            color: white;
            border: none;
            padding-top: 10px;
            border-radius: 4px;
            padding: 12px 20px;
            cursor: pointer;
            font-size: 14px;
        }

            .profile-container button:hover {
                background-color: #0056b3;
            }
    .edit-form-container {
        display: flex;
        justify-content: space-between;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        width: 100%;
        max-width: 800px;
        margin-top: 20px;
    }

    .profile-container {
        flex: 1;
        margin-right: 20px;
    }

    .edit-form {
        flex: 1;
        display: none;
    }

        .edit-form input[type="text"],
        .edit-form input[type="email"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .edit-form button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 12px 20px;
            cursor: pointer;
            font-size: 14px;
        }

            .edit-form button:hover {
                background-color: #0056b3;
            }
</style>

<div class="edit-form-container">
    <div class="profile-container">
        <p><strong>First Name:</strong> @Model.FirstName</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Mobile:</strong> @Model.PhoneNumber</p>
        <button id="editButton">Edit Profile</button>
    </div>

    <div class="edit-form" id="editForm">
        <h4>Edit Profile</h4>
        <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Update">
            <input type="text" name="FirstName" placeholder="New First Name" value="@Model.FirstName" />
            <input type="text" name="LastName" placeholder="New Last Name" value="@Model.LastName" />
            <input type="email" name="Email" placeholder="Email" value="@Model.Email" readonly />
            <input type="text" name="Mobile" placeholder="New Mobile" value="@Model.PhoneNumber" />
            <button type="submit">Save Changes</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("editButton").addEventListener("click", function () {
        document.getElementById("editForm").style.display = "block";
    });
</script>
